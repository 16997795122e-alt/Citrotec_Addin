<Window x:Class="LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login - Citrotec Addin" Width="400"
        SizeToContent="Height"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent"
        WindowStartupLocation="CenterScreen" Topmost="True">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Estilos.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border CornerRadius="10" BorderBrush="#E0E0E0" BorderThickness="1" Background="White" MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
                <Button x:Name="btnClose" Style="{StaticResource MacCloseButtonStyle}" Click="btnClose_Click"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Margin="40,20,40,40" VerticalAlignment="Center">
                <Image Source="/CitrotecAddin;component/IconeTitulo.png" Height="40" Margin="0,0,0,10"/>
                <TextBlock FontSize="22" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,25" Foreground="#333"><Run Text="Acesso ao "/><Run Language="pt-br" Text="Aplicativo"/></TextBlock>

                <TextBlock Text="NOME DE USUÁRIO" FontSize="11" FontWeight="Bold" Foreground="#888" Margin="0,0,0,5"/>
                <TextBox x:Name="UsernameTextBox" Padding="10,8" FontSize="14"/>

                <TextBlock Text="SENHA" FontSize="11" FontWeight="Bold" Foreground="#888" Margin="0,15,0,5"/>
                <PasswordBox x:Name="PasswordBox" Padding="10,8" FontSize="14"/>

                <CheckBox x:Name="RememberMeCheckBox" Content="Lembrar Usuário / Senha" Margin="0,15,0,0" Foreground="#555"/>

                <Button x:Name="LoginButton" Content="Entrar" Style="{StaticResource AppleButtonStyle}" Margin="0,25,0,0" Click="LoginButton_Click" IsDefault="True"/>
                <Button x:Name="RegisterButton" Content="Cadastrar" Style="{StaticResource AppleButtonStyle}" Background="Transparent" BorderThickness="0" Foreground="#09c321" Margin="0,10,0,0" Click="RegisterButton_Click"/>

                <TextBlock x:Name="ErrorTextBlock" Text="" Foreground="Red" TextAlignment="Center" Margin="0,10,0,0" Visibility="Collapsed"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>