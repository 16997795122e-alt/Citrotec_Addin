<Window x:Class="ResetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Redefinir Senha" Height="350" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Topmost="True"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Estilos.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border CornerRadius="10" BorderBrush="#E0E0E0" BorderThickness="1" Background="White">
        <Grid>
            <StackPanel Margin="30">
                <TextBlock Text="Redefinição de Senha Obrigatória" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,10" Foreground="#333"/>
                <TextBlock Text="Por motivos de segurança, você precisa definir uma nova senha para continuar." TextWrapping="Wrap" TextAlignment="Center" Foreground="#555" Margin="0,0,0,20"/>

                <TextBlock Text="NOVA SENHA" FontSize="11" FontWeight="Bold" Foreground="#888" Margin="0,10,0,5"/>
                <PasswordBox x:Name="NewPasswordBox" Padding="10,8" FontSize="14"/>

                <TextBlock Text="CONFIRMAR NOVA SENHA" FontSize="11" FontWeight="Bold" Foreground="#888" Margin="0,15,0,5"/>
                <PasswordBox x:Name="ConfirmPasswordBox" Padding="10,8" FontSize="14"/>

                <TextBlock x:Name="ErrorTextBlock" Text="" Foreground="Red" TextAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Visibility="Collapsed"/>

                <Button x:Name="SaveButton" Content="Salvar Nova Senha" Style="{StaticResource AppleButtonStyle}" Margin="0,20,0,0" Click="SaveButton_Click" IsDefault="True"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>