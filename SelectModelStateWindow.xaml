<Window x:Class="SelectModelStateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Selecionar Model State" Height="240" Width="400"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent"
        WindowStartupLocation="CenterOwner" Topmost="True">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Estilos.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border CornerRadius="10" BorderBrush="#E0E0E0" BorderThickness="1" Background="White" MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="TitleTextBlock" 
                       Text="Selecionar Model State" 
                       Grid.Row="0" 
                       FontWeight="SemiBold" 
                       FontSize="16" 
                       Foreground="#333" 
                       Margin="20"/>

            <StackPanel Grid.Row="1" Margin="20,0">
                <TextBlock x:Name="PromptTextBlock" 
                           Text="A montagem possui múltiplos Model States. Selecione qual deve ser usado para ler a Lista de Materiais:" 
                           Foreground="#6E7687" 
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"/>

                <ComboBox x:Name="ModelStateComboBox" 
                          Padding="10,8"
                          MinWidth="250"
                          FontSize="14"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
                <Button x:Name="btnCancel" 
                        Content="Cancelar" 
                        IsCancel="True" 
                        Click="btnCancel_Click" 
                        Style="{StaticResource AppleButtonStyle}"/>

                <Button x:Name="btnOK" 
                        Content="Confirmar" 
                        IsDefault="True" 
                        Click="btnOK_Click" 
                        Style="{StaticResource AppleButtonStyle}" 
                        Margin="10,0,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>