<Window x:Class="RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro de Novo Usuário" Height="650" Width="450"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent"
        WindowStartupLocation="CenterOwner" Topmost="True">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Estilos.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="AvatarRadioButtonStyle" TargetType="RadioButton">
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RadioButton">
                            <Grid>
                                <Border x:Name="border" CornerRadius="35" Width="70" Height="70" BorderBrush="LightGray" BorderThickness="1" Background="WhiteSmoke"/>
                                <Image Source="{Binding}" Width="50" Height="50"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="#faa61a"/>
                                    <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                </Trigger>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="#faa61a"/>
                                    <Setter TargetName="border" Property="BorderThickness" Value="3"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Border CornerRadius="10" BorderBrush="#E0E0E0" BorderThickness="1" Background="White" MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
                <Button x:Name="btnClose" Style="{StaticResource MacCloseButtonStyle}" Click="btnClose_Click"/>
            </StackPanel>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="40,20,40,40">
                    <TextBlock Text="Novo Usuário" FontSize="22" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,25" Foreground="#333"/>

                    <TextBlock Text="NOME DE USUÁRIO (LOGIN)" FontSize="11" FontWeight="Bold" Foreground="#888" Margin="0,10,0,5"/>
                    <TextBox x:Name="UsernameTextBox" Padding="10,8" FontSize="14"/>

                    <TextBlock FontSize="11" FontWeight="Bold" Foreground="#888" Margin="0,15,0,5"><Run Language="pt-br" Text="NOME"/><Run Text=" (EXIBIÇÃO)"/></TextBlock>
                    <TextBox x:Name="FullNameTextBox" Padding="10,8" FontSize="14"/>
                    <TextBlock Text="TAG DE USUÁRIO (ex: E.A.S.)" FontSize="11" FontWeight="Bold" Foreground="#888" Margin="0,15,0,5"/>
                    <TextBox x:Name="UserTagTextBox" Padding="10,8" FontSize="14"/>
                    <TextBlock Text="SEXO" FontSize="11" FontWeight="Bold" Foreground="#888" Margin="0,15,0,5"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <RadioButton x:Name="MascRadioButton" GroupName="Sexo" Content="Masculino" VerticalAlignment="Center" Margin="0,0,30,0"/>
                        <RadioButton x:Name="FemRadioButton" GroupName="Sexo" Content="Feminino" VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Text="SENHA" FontSize="11" FontWeight="Bold" Foreground="#888" Margin="0,15,0,5"/>
                    <PasswordBox x:Name="PasswordBox" Padding="10,8" FontSize="14"/>

                    <TextBlock Text="CONFIRMAR SENHA" FontSize="11" FontWeight="Bold" Foreground="#888" Margin="0,15,0,5"/>
                    <PasswordBox x:Name="ConfirmPasswordBox" Padding="10,8" FontSize="14"/>

                    <TextBlock x:Name="ErrorTextBlock" Text="" Foreground="Red" TextAlignment="Center" Margin="0,15,0,0" TextWrapping="Wrap" Visibility="Collapsed"/>

                    <Button x:Name="RegisterButton" Content="Finalizar Cadastro" Style="{StaticResource AppleButtonStyle}" Margin="0,25,0,0" Click="RegisterButton_Click" IsDefault="True"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>