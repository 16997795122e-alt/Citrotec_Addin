<Window x:Class="ApplyCitrotecLabelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Aplicar Legenda Citrotec" Height="500" Width="650"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent"
        WindowStartupLocation="CenterOwner" Topmost="True">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Estilos.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <x:Array x:Key="LabelOptions" Type="sys:String" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                <sys:String>Com quantidade</sys:String>
                <sys:String>Sem quantidade</sys:String>
                <sys:String>Apenas (ITEM)</sys:String>
                <sys:String>Esquerda/Direita</sys:String>
            </x:Array>
        </ResourceDictionary>
    </Window.Resources>

    <Border CornerRadius="10" BorderBrush="#E0E0E0" BorderThickness="1" Background="White" MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Aplicar Legenda Padrão Citrotec" Grid.Row="0" FontWeight="SemiBold" FontSize="16" Foreground="#333" Margin="20,15"/>

            <TextBlock Grid.Row="1" TextWrapping="Wrap" Foreground="#6E7687" Margin="20,0,20,15">
                Selecione uma ou mais vistas no desenho (ou execute o comando sem seleção para escolher manualmente) e defina o tipo de legenda a ser aplicada. As iProperties necessárias (ListaItem, ItemQty, ItemQtyDiv2) serão criadas/atualizadas no modelo referenciado se não existirem.
            </TextBlock>

            <StackPanel Grid.Row="2" Margin="20,0,20,10" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Tipo de Legenda:" FontWeight="SemiBold" Foreground="#555" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <ComboBox x:Name="LabelTypeComboBox" MinWidth="200"
                           ItemsSource="{StaticResource LabelOptions}"
                           SelectedIndex="0" Padding="10,8"/>
            </StackPanel>


            <TextBox Grid.Row="3" x:Name="LogTextBox" IsReadOnly="True" VerticalScrollBarVisibility="Auto" FontFamily="Consolas" FontSize="12" Margin="20,0" BorderBrush="#E0E0E0" Text="Aguardando execução..."/>

            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,15">
                <Button x:Name="btnClose" Content="Fechar" IsCancel="True" Click="btnClose_Click" Style="{StaticResource AppleButtonStyle}"/>
                <Button x:Name="btnExecute" Content="Aplicar Legenda(s)" IsDefault="True" Click="btnExecute_Click" Style="{StaticResource AppleButtonStyle}" Margin="10,0,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>