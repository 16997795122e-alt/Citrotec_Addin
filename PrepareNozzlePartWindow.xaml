<Window x:Class="PrepareNozzlePartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Editar Propriedades do Bocal" Height="500" Width="600" AllowsTransparency="True" WindowStyle="None" Background="Transparent"
        WindowStartupLocation="CenterOwner" Topmost="True"
        Loaded="Window_Loaded">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Estilos.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="Label">
                <Setter Property="Foreground" Value="#555"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Margin" Value="0,0,10,0"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
            <Style TargetType="TextBox" x:Key="EditorTextBox" BasedOn="{StaticResource ModernSearchBoxStyle}">
                <Setter Property="Height" Value="35"/>
                <Setter Property="Padding" Value="10,6"/>
                <Setter Property="Margin" Value="0,5,0,5"/>
            </Style>

        </ResourceDictionary>
    </Window.Resources>

    <Border CornerRadius="10" BorderBrush="#E0E0E0" BorderThickness="1" Background="White" MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="TitleTextBlock" Text="Editar Propriedades do Bocal" Grid.Row="0" FontWeight="SemiBold" FontSize="16" Foreground="#333" Margin="20,15"/>

            <TextBlock x:Name="DescriptionTextBlock" Grid.Row="1" TextWrapping="Wrap" Foreground="#6E7687" Margin="20,0,20,15">
                Edite os valores das iProperties personalizadas para a Tabela de Bocais na peça (.ipt) ativa. Se as propriedades não existirem, elas serão criadas ao aplicar.
            </TextBlock>

            <Grid x:Name="PartInputGrid" Grid.Row="2" Margin="20,5,20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="TAG BOCAL:" Grid.Row="0" Grid.Column="0"/>
                <TextBox x:Name="txtTagBocal" Style="{StaticResource EditorTextBox}" Grid.Row="0" Grid.Column="1"/>

                <Label Content="DESCRIÇÃO BOCAL:" Grid.Row="1" Grid.Column="0"/>
                <TextBox x:Name="txtDescricaoBocal" Style="{StaticResource EditorTextBox}" Grid.Row="1" Grid.Column="1"/>

                <Label Content="D.N:" Grid.Row="2" Grid.Column="0"/>
                <TextBox x:Name="txtDN" Style="{StaticResource EditorTextBox}" Grid.Row="2" Grid.Column="1"/>

                <Label Content="QTD:" Grid.Row="3" Grid.Column="0"/>
                <TextBox x:Name="txtQtd" Style="{StaticResource EditorTextBox}" Grid.Row="3" Grid.Column="1"/>
            </Grid>

            <TextBox Grid.Row="3" x:Name="LogTextBox" IsReadOnly="True" VerticalScrollBarVisibility="Auto" FontFamily="Consolas" FontSize="12" Margin="20,15" BorderBrush="#E0E0E0" Text="Aguardando carregamento/aplicação..."/>

            <StackPanel x:Name="PartButtonPanel" Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0,20,15">
                <Button x:Name="btnClear" 
                        Content="Limpar Campos" 
                        Click="btnClear_Click" 
                        Style="{StaticResource AppleButtonStyle}"/>

                <Button x:Name="btnClose" 
                        Content="Fechar" 
                        IsCancel="True" 
                        Click="btnClose_Click" 
                        Style="{StaticResource AppleButtonStyle}"
                        Margin="10,0,0,0"/>

                <Button x:Name="btnApply" 
                        Content="Aplicar Valores" 
                        IsDefault="True" 
                        Click="btnApply_Click" 
                        Style="{StaticResource AppleButtonStyle}" 
                        Margin="10,0,0,0"/>
            </StackPanel>

            <StackPanel x:Name="AssemblyButtonPanel" Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0,20,15" Visibility="Collapsed">

                <Button x:Name="btnCloseAssembly" 
                        Content="Fechar" 
                        IsCancel="True" 
                        Click="btnCloseAssembly_Click" 
                        Style="{StaticResource AppleButtonStyle}"/>

                <Button x:Name="btnCleanseAssembly" 
                        Content="Limpar Propriedades da Montagem" 
                        IsDefault="True" 
                        Click="btnCleanseAssembly_Click" 
                        Style="{StaticResource AppleButtonStyle}" 
                        Margin="10,0,0,0"/>
            </StackPanel>

        </Grid>
    </Border>
</Window>