<Window x:Class="CitrotecAddin.ControlarDimensoesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Controlar Dimensões / Comprimento Padrão" Height="500" Width="600"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent"
        WindowStartupLocation="CenterOwner" Topmost="True" MinHeight="450"
        Loaded="Window_Loaded">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Estilos.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        </ResourceDictionary>
    </Window.Resources>

    <Border CornerRadius="10" BorderBrush="#E0E0E0" BorderThickness="1" Background="White" MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Controlar Dimensões / Comprimento Padrão" Grid.Row="0" FontWeight="SemiBold" FontSize="16" Foreground="#333" Margin="20,15"/>
            <TextBlock x:Name="DescriptionTextBlock" Grid.Row="1" Text="Carregando informações do ambiente..."
                       TextWrapping="Wrap" Foreground="#6E7687" Margin="20,0,20,15"/>

            <StackPanel Grid.Row="2" Margin="20,0">
                <TextBlock Text="Selecione o Modo de Operação:" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,10"/>

                <RadioButton x:Name="rbSheetMetal" Content="Sheet Metal (Automático - Peça ou Seleção)" GroupName="RuleType" Checked="RadioButton_CheckedChanged" />
                <RadioButton x:Name="rbParam1" Content="1 Parâmetro (Peça ou Seleção)" GroupName="RuleType" Checked="RadioButton_CheckedChanged"/>
                <RadioButton x:Name="rbParam2" Content="2 Parâmetros (Peça ou Seleção)" GroupName="RuleType" Checked="RadioButton_CheckedChanged"/>
                <RadioButton x:Name="rbComprimentoPadrao" Content="Comprimento Padrão (G_L/L - Peça ou Seleção)" GroupName="RuleType" Margin="0,0,0,5" Checked="RadioButton_CheckedChanged"/>

                <StackPanel x:Name="Param1Panel" Visibility="Collapsed" Margin="20,0,0,10">
                    <TextBlock Text="Nome do Parâmetro de Comprimento:" Foreground="#6E7687" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtParam1" Padding="8,5" BorderBrush="#E0E5F0"/>
                </StackPanel>
                <StackPanel x:Name="Param2Panel" Visibility="Collapsed" Margin="20,0,0,10">
                    <TextBlock Text="Nome do Parâmetro 1:" Foreground="#6E7687" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtParam1_2" Padding="8,5" BorderBrush="#E0E5F0"/>
                    <TextBlock Text="Nome do Parâmetro 2:" Foreground="#6E7687" Margin="0,10,0,5"/>
                    <TextBox x:Name="txtParam2_2" Padding="8,5" BorderBrush="#E0E5F0"/>
                </StackPanel>
            </StackPanel>

            <TextBox Grid.Row="3" x:Name="LogTextBox" IsReadOnly="True" VerticalScrollBarVisibility="Auto" FontFamily="Consolas" FontSize="12" Margin="20,10" BorderBrush="#E0E0E0" Text="Log de execução aparecerá aqui..."/>

            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,15">
                <Button x:Name="btnClose" Content="Fechar" IsCancel="True" Click="btnClose_Click" Style="{StaticResource AppleButtonStyle}"/>

                <Button x:Name="btnAbrirVerificarRegras" 
                        Content="Verificar/Limpar Regras" 
                        Style="{StaticResource AppleButtonStyle}" 
                        Margin="10,0,0,0" 
                        Click="btnAbrirVerificarRegras_Click" 
                        IsEnabled="False"/>
                <Button x:Name="btnExecute" Content="Gerar/Aplicar Regra(s)" IsDefault="True" Click="btnExecute_Click" Style="{StaticResource AppleButtonStyle}" Margin="10,0,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>