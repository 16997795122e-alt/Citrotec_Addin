<Window x:Class="OrganizarBaloesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Organizar Balões" Height="450" Width="600"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent"
        WindowStartupLocation="CenterOwner" Topmost="True">
	<Window.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="Estilos.xaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Window.Resources>

	<Border CornerRadius="10" BorderBrush="#E0E0E0" BorderThickness="1" Background="White" MouseLeftButtonDown="Border_MouseLeftButtonDown">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>

			<TextBlock Text="Organizar Balões (Balloons)" Grid.Row="0" FontWeight="SemiBold" FontSize="16" Foreground="#333" Margin="20"/>

			<Grid Grid.Row="1" Margin="20,0">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>
				<TextBlock Grid.Row="0" Text="Este comando organiza todos os balões da folha ativa que possuem mais de um item associado." TextWrapping="Wrap" Foreground="#6E7687" Margin="0,0,0,10"/>
				<TextBox Grid.Row="1" x:Name="LogTextBox" IsReadOnly="True" VerticalScrollBarVisibility="Auto" FontFamily="Consolas" FontSize="12" Text="Log de execução aparecerá aqui..."/>
			</Grid>

			<StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
				<Button x:Name="btnClose" Content="Fechar" IsCancel="True" Click="btnClose_Click" Style="{StaticResource AppleButtonStyle}"/>
				<Button x:Name="btnExecute" Content="Executar" IsDefault="True" Click="btnExecute_Click" Style="{StaticResource AppleButtonStyle}" Margin="10,0,0,0"/>
			</StackPanel>
		</Grid>
	</Border>
</Window>