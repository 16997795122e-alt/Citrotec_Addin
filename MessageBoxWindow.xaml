<Window x:Class="MessageBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Mensagem" Height="230" Width="450"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent"
        WindowStartupLocation="CenterOwner" Topmost="True" MinHeight="200" MinWidth="400">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Estilos.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border CornerRadius="10" BorderBrush="#E0E0E0" BorderThickness="1" Background="White" MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="TitleTextBlock" Text="Título da Mensagem" Grid.Row="0" FontWeight="SemiBold" FontSize="16" Foreground="#333" Margin="20"/>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20,0">
                <TextBlock x:Name="MessageTextBlock" Text="Corpo da mensagem de exemplo vai aqui." Foreground="#6E7687" TextWrapping="Wrap"/>
            </ScrollViewer>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
                <Button x:Name="btnYes" Content="Sim" Click="btnYes_Click" Style="{StaticResource AppleButtonStyle}" Margin="10,0,0,0" Visibility="Collapsed"/>
                <Button x:Name="btnNo" Content="Não" Click="btnNo_Click" Style="{StaticResource AppleButtonStyle}" Margin="10,0,0,0" Visibility="Collapsed"/>
                <Button x:Name="btnOK" Content="OK" Click="btnOK_Click" Style="{StaticResource AppleButtonStyle}" Margin="10,0,0,0" Visibility="Collapsed"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>